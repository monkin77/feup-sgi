<sxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="50" angle="30">
            <from x="20" y="15" z="20" />
            <to x="0" y="-2" z="0" />
        </perspective>

        <perspective id="camera2" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>

        <!-- <ortho id="orthoCam" near="0.1" far="500" left="0" right="5" top="5" bottom="0" >
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </ortho> -->

    </views>

    <ambient>
        <ambient r="0.4" g="0.4" b="0.4" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="5" z="5" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="vidral" file="scenes/images/vidral.jpg" />
        <texture id="leaves" file="scenes/images/leaves.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="1" g="1" b="1" a="1.0" />
        </material>

        <material id="backgroundMaterial" shininess="10">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0.2" g="0.4" b="0.8" a="1.0" />
            <diffuse r="0.2" g="0.4" b="0.8" a="1.0" />
            <specular r="0.2" g="0.4" b="0.8" a="1.0" />
        </material>

        <material id="skinMaterial" shininess="10">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0.95" g="0.66" b="0.49" a="1.0" />
            <diffuse r="0.95" g="0.66" b="0.49" a="1.0" />
            <specular r="0.95" g="0.66" b="0.49" a="1.0" />
        </material>

        <material id="shirtMaterial" shininess="10">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0.5" g="0.7" b="0.90" a="1.0" />
            <diffuse r="0.5" g="0.7" b="0.90" a="1.0" />
            <specular r="0.5" g="0.7" b="0.90" a="1.0" />
        </material>

        <material id="beltMaterial" shininess="10">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.25" g="0.25" b="0.25" a="1.0" />
        </material>

        <material id="shortsMaterial" shininess="10">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="0.35" g="0.35" b="0" a="1.0" />
            <specular r="0.25" g="0.25" b="0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
        <transformation id="transform2">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <translate x="2" y="-1" z="1" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="torus">
            <torus inner="0.4" outer="1" slices="20" loops="50" />
        </primitive>

        <primitive id="rectangle">
            <rectangle x1="0" y1="0" x2="1" y2="1" />
        </primitive>

        <primitive id="triangle">
            <triangle x1="-0.5" y1="0" z1="0" x2="0.5" y2="0" z2="0" x3="0" y3="1" z3="0" />
        </primitive>

        <primitive id="isoscelesTriangle">
            <triangle x1="-0.5" y1="0" z1="0" x2="0.5" y2="0" z2="0" x3="0" y3="0.75" z3="0" />
        </primitive>

        <primitive id="sphere">
            <sphere radius="1" slices="20" stacks="20" />
        </primitive>

        <primitive id="cylinder">
            <cylinder base="1" top="1" height="2" slices="20" stacks="20" />
        </primitive>

        <!-- 2.0 x 1.0 x 1.0 -->
        <primitive id="prismPrimitive">
            <cylinder base="0.707" top="0.707" height="2" slices="4" stacks="20" />
        </primitive>

        <!-- 1.0 x 1.0 x 0.75 -->
        <primitive id="trapezium">
            <cylinder base="0.707" top="0.53" height="1" slices="4" stacks="20" />
        </primitive>
    </primitives>

    <components>
        <!-- Custom Shapes -->

        <!-- Quadrangular Prism -->

        <!-- 2.0 x 1.0 x 1.0 -->
        <component id="prismCylinder">
            <transformation>
                <rotate axis="y" angle="90" />
                <rotate axis="z" angle="45" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="prismPrimitive" />
            </children>
        </component>

        <!-- 1.0 x 1.0 x 0.0 -->
        <component id="quadrangularPrismBase">
            <transformation>
                <translate x="0" y="-0.5" z="-0.5" />
                <rotate axis="y" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <!-- 1.0 x 1.0 x 0.0 -->
         <component id="quadrangularPrismTop">
            <transformation>
                <translate x="2" y="-0.5" z="0.5" />
                <rotate axis="y" angle="90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <!-- 2.0 x 1.0 x 1.0 -->
        <component id="quadrangularPrism">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="prismCylinder" />
                <componentref id="quadrangularPrismBase" />
                <componentref id="quadrangularPrismTop" />
            </children>
        </component>

        <!--  Triangular Prism  -->

        <!-- 1.0 x 0.75 x 0.0 -->
        <component id="triangularPrismBase">
            <transformation>
                <rotate axis="y" angle="180" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="isoscelesTriangle" />
            </children>
        </component>

        <!-- 1.0 x 0.75 x 0.0 -->
         <component id="triangularPrismTop">
            <transformation>
                <translate x="0" y="0" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="isoscelesTriangle" />
            </children>
        </component>

        <!-- 1.0 x 1.0 x 0.9 -->
         <component id="triangularPrismRight">
            <transformation>
                <translate x="0.5" y="0" z="1" />
                <rotate axis="y" angle="90" />
                <rotate axis="x" angle="-33.69" />
                <scale x="1" y="0.9" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <!-- 1.0 x 1.0 x 0.9 -->
        <component id="triangularPrismLeft">
            <transformation>
                <translate x="-0.5" y="0" z="0" />
                <rotate axis="y" angle="-90" />
                <rotate axis="x" angle="-33.69" />
                <scale x="1" y="0.9" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <!-- 1.0 x 1.0 x 1.0 -->
        <component id="triangularPrismBot">
            <transformation>
                <translate x="-0.5" y="0" z="0" />
                <rotate axis="x" angle="90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <!-- 1.0 x 1.0 x 0.75 -->
        <component id="triangularPrism">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="triangularPrismBase" />
                <componentref id="triangularPrismTop" />
                <componentref id="triangularPrismRight" />
                <componentref id="triangularPrismLeft" />
                <componentref id="triangularPrismBot" />
            </children>
        </component>

        <!-- 0.6 x 0.85 x 0.7-->
         <component id="head">
            <transformation>
                <translate x="0.6" y="3.2" z="0" />
                <scale x="0.6" y="0.85" z="0.7" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="sphere" />
            </children>
        </component>

        <!-- 0.25(r) x 0.3 (h)-->
        <component id="neck">
            <transformation>
                <translate x="0.6" y="2.5" z="0" />
                <scale x="0.25" y="0.3" z="0.25" />
                <rotate axis="x" angle="90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="cylinder" />
            </children>
        </component>

        <!-- 1.6 x 1.0 x 0.4 -->
        <component id="upperBack">
            <transformation>
                <translate x="-0.2" y="1.4" z="0" />
                <scale x="0.8" y="1" z="0.4" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="quadrangularPrism" />
            </children>
        </component>

        <!-- 1.6 x 1.0 x 0.75 -->
        <component id="boobies">
            <transformation>
                <translate x="1.4" y="1.4" z="0.2" />
                <scale x="1.6" y="1" z="1" />
                <rotate axis="z" angle="-90" />
                <rotate axis="x" angle="90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="triangularPrism" />
            </children>
        </component>

        <!-- 1.6/1.2 x 0.6 x 0.4 -->
        <component id="waist">
            <transformation>
                <translate x="0.6" y="0.9" z="0" />
                <scale x="1.6" y="0.6" z="0.4" />
                <rotate axis="y" angle="45" />
                <rotate axis="x" angle="90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="trapezium" />
            </children>
        </component>

        <!-- 1.2 x 0.6 x 0.4 -->
        <component id="lowerBelly">
            <transformation>
                <scale x="0.6" y="0.6" z="0.4" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="quadrangularPrism" />
            </children>
        </component>

        <!-- 1.2 x 2.2 x 0.4 -->
        <component id="torso">
            <transformation>
            </transformation>
            <materials>
                <material id="shirtMaterial" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="upperBack" />
                <componentref id="boobies" />
                <componentref id="waist" />
                <componentref id="lowerBelly" />
            </children>
        </component>

        <!-- 1.2/1.6 x 0.2 x 0.4 -->
        <component id="belt">
            <transformation>
                <translate x="0.6" y="-0.5" z="0" />
                <scale x="1.6" y="0.2" z="0.4" />
                <rotate axis="y" angle="45" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="beltMaterial" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="trapezium" />
            </children>
        </component>

        <!-- 1.2 x 0.6 x 0.4 -->
        <component id="innerHip">
            <transformation>
                <translate x="0" y="-0.8" z="0" />
                <scale x="0.6" y="0.6" z="0.4" />
            </transformation>
            <materials>
                <material id="shortsMaterial" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="quadrangularPrism" />
            </children>
        </component>

        <!-- 1.176 x 1.05 x 0.12 -->
        <component id="outerHip">
            <transformation>
                <translate x="0.6" y="-0.8" z="0" />
                <scale x="0.7" y="0.9" z="0.3" />
                <rotate axis="x" angle="90" />
            </transformation>
            <materials>
                <material id="shortsMaterial" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="torus" />
            </children>
        </component>

        <!-- 1.26 x 1.05 x 1.52 -->
        <component id="hip">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="belt" />
                <componentref id="innerHip" />
                <componentref id="outerHip" />
            </children>
        </component>

        <!-- incomplete -> 1.2 x 3.15 x 0.4 -->
        <component id="laraCroft">
            <transformation>
            </transformation>
            <materials>
                <material id="skinMaterial" />
            </materials>
            <texture id="leaves"/>
            <children>
                <componentref id="head" />
                <componentref id="neck" />
                <componentref id="torso" />
                <componentref id="hip" />
            </children>
        </component>

        <!-- 10 x 10 x 10 -->
        <component id="leftWall">
            <transformation>
                <translate x="-5" y="-5" z="5" />
                <scale x="10" y="10" z="10" />
                <rotate axis="y" angle="90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="vidral" length_s="0.5" length_t="0.5" />
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <!-- 10 x 10 x 10 -->
         <component id="rightWall">
            <transformation>
                <translate x="-5" y="-5" z="-5" />
                <scale x="10" y="10" z="10" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <!-- 10 x 10 x 10 -->
        <component id="floor">
            <transformation>
                <translate x="-5" y="-5" z="5" />
                <scale x="10" y="10" z="10" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <component id="background">
            <transformation>
            </transformation>
            <materials>
                <material id="backgroundMaterial" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="leftWall" />
                <componentref id="rightWall" />
                <componentref id="floor" />
            </children>
        </component>

        <!-- TOOD: Remove this component that is used to test triangle texCoords  -->
        <component id="testTriangle">
            <transformation>
                <translate y="-5" x="0" z="0" />
                <scale x="10" y="10" z="10" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="vidral" length_s="0.5" length_t="0.5" />
            <children>
                <primitiveref id="triangle" />
            </children>
        </component>

        <component id="root">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="laraCroft" />
                <componentref id="background" />
            </children>
        </component>
        
    </components>
</sxs>