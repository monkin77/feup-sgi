<sxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="50" angle="30">
            <from x="20" y="15" z="20" />
            <to x="0" y="-2" z="0" />
        </perspective>

        <perspective id="camera2" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>

        <!-- <ortho id="orthoCam" near="0.1" far="500" left="0" right="5" top="5" bottom="0" >
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </ortho> -->

    </views>

    <ambient>
        <ambient r="0.4" g="0.4" b="0.4" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="5" z="5" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
        <transformation id="transform2">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <translate x="2" y="-1" z="1" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="torus">
            <torus inner="1" outer="5" slices="20" loops="50" />
        </primitive>

        <primitive id="rectangle">
            <rectangle x1="0" y1="0" x2="1" y2="1" />
        </primitive>

        <primitive id="triangle">
            <triangle x1="-0.5" y1="0" z1="0" x2="0.5" y2="0" z2="0" x3="0" y3="1" z3="0" />
        </primitive>

        <primitive id="sphere">
            <sphere radius="1" slices="20" stacks="20" />
        </primitive>

        <primitive id="cylinder">
            <cylinder base="1" top="1" height="2" slices="20" stacks="20" />
        </primitive>

        <primitive id="prismPrimitive">
            <cylinder base="1" top="1" height="2" slices="4" stacks="20" />
        </primitive>
    </primitives>

    <components>
        <!-- Custom Shapes -->
        <component id="prismCylinder">
            <transformation>
                <rotate axis="y" angle="90" />
                <rotate axis="z" angle="45" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="prismPrimitive" />
            </children>
        </component>

        <component id="prismBase">
            <transformation>
                <scale x="1" y="1.414" z="1.414" />
                <translate x="0" y="-0.5" z="-0.5" />
                <rotate axis="y" angle="-90" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

         <component id="prismTop">
            <transformation>
                <scale x="1" y="1.42" z="1.414" />
                <translate x="2" y="-0.5" z="0.5" />
                <rotate axis="y" angle="90" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <component id="prism">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="prismCylinder" />
                <componentref id="prismBase" />
                <componentref id="prismTop" />
            </children>
        </component>


         <component id="head">
            <transformation>
                <translate x="0" y="3" z="0" />
                <scale x="0.7" y="1" z="0.8" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="sphere" />
            </children>
        </component>

        <component id="neck">
            <transformation>
                <translate x="0" y="2.1" z="0" />
                <scale x="0.25" y="0.3" z="0.25" />
                <rotate axis="x" angle="90" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="cylinder" />
            </children>
        </component>

        <component id="upperBack">
            <transformation>
                <translate x="-0.8" y="1" z="-0.2" />
                <scale x="0.8" y="0.7" z="0.3" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="prism" />
            </children>
        </component>

        <component id="torso">
            <transformation>
                
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="upperBack" />
            </children>
        </component>

        <component id="laraCroft">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="head" />
                <componentref id="neck" />
                <componentref id="torso" />
            </children>
        </component>

        <component id="root">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="laraCroft" />
                <!-- <primitiveref id="triangle" /> -->
                <!-- <primitiveref id="sphere" /> -->
                <!-- <primitiveref id="cylinder" />  -->
            </children>
        </component>
    </components>
</sxs>